{
  "compilerOptions": {
    "lib": [
      "es5",
      "es6",
      "DOM"
    ],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "paths": {
      "@components/*": ["./src/components/*"],
      "@uikit/*": ["./src/UIKit"],
      "@pages/*": ["./src/pages/*"],
      "@hooks/*": ["./src/hooks/"],
      "@utils/*": ["./src/utils/"],
      "@constants/*": ["./src/constants/"]
    }
  }
}
